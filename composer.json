{
	"name": "mirarus/bmvc-libs",
	"description": "Mirarus BMVC Libs (Basic MVC Libs)",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Ali Güçlü",
			"email": "aliguclutr@gmail.com"
		}
	],
	"require": {
		"php": "^7.3 || ^8.0",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-intl" : "*",
		"ext-gd": "*",
		"ext-curl": "*",
		"mirarus/bmvc-exception": "0.*",
		"monolog/monolog": "^2.3",
		"filp/whoops": "^2.14",
		"symfony/console": "^5.3",
		"jenssegers/blade": "^1.4"
    },
	"autoload": {
		"psr-4": {
			"BMVC\\Libs\\": "src"
		},
		"files": [
			"src/helper.php"
		]
	},
	"config": {
		"preferred-install": "dist",
		"sort-packages": true,
		"optimize-autoloader": true
	}
}
